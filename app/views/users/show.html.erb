<div class="container">
  <div class="row">
    <div class="cl-lg-5">
      <p style="color: green"><%= notice %></p>

      <%= render @user %>

      <div>
        <%= link_to "Edit this user", edit_user_path(@user), class: "btn btn-primary btn-lg" %> |
        <%= link_to "Back to users", users_path , class: "btn btn-outline-primary btn-lg" %> |

        <%= link_to "Destroy this user", @user, method: :delete, class: "btn btn-danger btn-lg"  %>
      </div>
    </div>
  </div>
</div>

