<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <li><h3>Name: <%= user.name %></h3>
    </li>
    
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
          CRUD
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><%= link_to "Show", user, class: "dropdown-item" %></li>
        <li><%= link_to "Edit", edit_user_path(user), class: "dropdown-item" %></li>
        <li> <%= button_to "Destroy", user, method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %></li>
      </ul>
    </div>
    <br>
    <br>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>



