<p style="color: green"><%= notice %></p>


<div class="container">
  <div class="row">
    <div class="cl-lg-20 md-mx-auto">
      <h1>Users</h1>

      <%= link_to "New", new_user_path,class: "btn btn-primary btn-lg", data: { bs_toggle: "modal", bs_target: "#newUserModal", remote: true } %>
      <div id="users">
        <% @users.each do |user| %>
          <%= render user%>
          <div class="dropdown">
            <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"  aria-expanded="false">
            CRUD
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
              <li><%= link_to "Show", user, class: "dropdown-item" %></li>
              <li><%= link_to "Edit", edit_user_path(user), class: "dropdown-item" %></li>
              <li> <%= button_to "Destroy", user, method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item " %></li>
            </ul>
          </div>
          <br>
          <br>
        <% end %>
      </div>
      <%= link_to "New user", new_user_path , class: "btn btn-primary btn_lg" %>
    </div>
  </div>
</div>




<!-- Modal -->
<div class="modal fade" id="newUserModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

