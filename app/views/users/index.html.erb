<p style="color: green"><%= notice %></p>

<%= turbo_stream_from "users" %>

<div class="container">
  <div class="row">
    <div class="cl-lg-5 md-mx-auto">
      <h1>Users</h1>

      <%= link_to "New", new_user_path,class: "btn btn-primary btn-lg", data: { bs_toggle: "modal", bs_target: "#newUserModal", remote: true, controller: "new-user" } %>
      <br>
      <div id="users" class="mt-5">
        <% @users.each do |user| %>
          <div class="card card-body">
            <%= render user%>
            <div class="dropdown">
              <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"  aria-expanded="false">
              CRUD
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                <li><%= link_to "Show", user, class: "dropdown-item" %></li>
                <li><%= link_to "Edit", edit_user_path(user), class: "dropdown-item" %></li>
                <li> <%= button_to "Destroy", user, method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item " %></li>
              </ul>
            </div>
          </div>
          <br>
          <br>
        <% end %>
      </div>
      <%= link_to "New user", new_user_path , class: "btn btn-primary btn_lg" %>
    </div>
  </div>
</div>




<!-- Modal -->
<div class="modal fade" id="newUserModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-controller="modals">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Create New User</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <%= render 'form' , user: @user%>

      </div>
    </div>
  </div>